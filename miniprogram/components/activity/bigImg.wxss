/* components/activity/bigImg.wxss */
.box-wrap{
  background: #fff;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 25rpx;
}
.text-wrap{
  position: relative;
  padding: 0 20rpx;
}
.time{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.avatar{
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.text{
  font-size: 34rpx;
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
}
.user-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 15rpx;
  padding:0 20rpx 20rpx 20rpx;
}
.sharebtn{
  width: 50rpx;
  height: 50rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  vertical-align: middle;
  display: inline-block;
  margin-right: 15rpx;
}
.sharebtn::after{
  border: none;
}
.share-icon{
  width: 50rpx;
  height: 50rpx;
  vertical-align: top;
  background-color: transparent;
}
