.left text{
  font-size: 34rpx;
  color: #666;
  line-height: 40rpx;
  vertical-align: middle;
}
.right .timetext{
  font-size: 34rpx;
  color: #666;
  vertical-align: middle;
  margin-right: 20rpx;
}
.activity-wrap{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}
.activity-wrap image{
  width: 300rpx;
  min-width: 300rpx;
  height: 300rpx;
  margin-right: 20rpx;
}
.activity-text{
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  margin-bottom: 5rpx;
}