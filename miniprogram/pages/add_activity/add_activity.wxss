/* pages/add_activity/add_activity.wxss */
.page-wrap{
  padding: 0 40rpx;
  font-size: 36rpx;
}
.title{
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 20rpx;
}
.input-wrap{
  margin: 50rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}
input{
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  font-size: 30rpx;
  width: 77%;
}
textarea{
  border: 1rpx solid #ddd;
  padding: 20rpx;
  width: 76%;
}
radio{
  margin-left: 20rpx;
}
.pay-btn{
  width: 350rpx;
  background: #fff;
  border-color: #333;
  font-size: 34rpx;
  margin-top: 100rpx;
}
.addimg-wrap{
  display: flex;
  width: 670rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.addimg-wrap .item{
  width: 201rpx;
  height: 201rpx;
  position: relative;
  margin: 5px;
}
.addimg-wrap .item image{
  width: 100%;
  height: 100%;
  background: #fff;
}
/*删除按钮*/
.delete {
    position: absolute;
    height: 20px;
    bottom: 0;
    width: 100%;
    background: #eee;
    opacity: .8;
}
.delete image {
    position: absolute;
    width: 50rpx!important;
    height: 50rpx!important;
    left: 50%;
    margin-left:-25rpx;
}