/* pages/mhome/mhome.wxss */
.tabbar-wrap{
  width: 100%;
  display: flex;
  position: fixed;
  top: 0;
  height: 100rpx;
  z-index: 999;
}
.tabbar-wrap .item{
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 34rpx;
  color: #333;
}
.active{
  border-bottom: 6rpx solid #cc0000;
  color: #222;
}
swiper{
  min-height: 90vh;
  padding: 25rpx;
  padding-bottom: 0;
  margin-top: 100rpx;
}
.product-wrap{
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
  margin-bottom: 10rpx;
}
.pro-title-wrap{
  padding:0 10rpx;
}
.title{
  font-size: 40rpx;
  font-weight: bold;
  line-height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.text{
  font-size: 34rpx;
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
}
.activity-wrap{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}
.activity-wrap image{
  width: 300rpx;
  min-width: 300rpx;
  height: 300rpx;
  margin-right: 20rpx;
}
.activity-text{
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  margin-bottom: 5rpx;
}
.time text{
  font-size: 28rpx;
  color: #666;
  line-height: 85rpx;
}
.money-wrap .del,
.time .del{
  color: #fff;
  background: #cc0000;
  font-size: 26rpx;
  vertical-align: middle;
  margin:10rpx 20rpx;
  width:130rpx;
  float:right;
}
.time .change{
  color: #333;
  background: #fff;
  font-size: 26rpx;
  vertical-align: middle;
  margin:10rpx 20rpx;
  width:130rpx;
  float:right;
}
.addProduct,
.addactivity{
  width:220rpx;
  margin:80rpx auto;
  background:#fff;
  color:#333;
  font-size:36rpx;
  border-color:#333;
}
.btn-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.product{
  border: 1rpx solid #eee;
  width: 48%;
  margin-bottom:20rpx;
}
.mainimg{
  width: 340rpx;
  height: 340rpx;
}
.money-wrap{
  padding:20rpx 10rpx;
}
.money{
  font-size: 34rpx;
  line-height: 48rpx;
  color: #cc0000;
}
/* 轮播图 */
.acSwiper{
  min-height: 450rpx;
  width: 100%;
  margin: 0;
  padding: 0;
  margin-bottom: 20rpx;
}
.acSwiperItem{
  min-height: 450rpx;
  width: 100%;
  position: relative;
}
.acSwiperItem image{
  width: 100%;
  height:450rpx;
}
.img-title{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  display: inline-block;
  background: linear-gradient(transparent,rgb(100, 100, 100));
  padding: 10rpx;
}
.img-title text{
  font-size: 35rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}