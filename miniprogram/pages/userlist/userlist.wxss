/* pages/userlist/userlist.wxss */
.page-wrap{
  padding: 0 20rpx;
}
.user-wrap{
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.user-wrap:last-child{
  border: none;
}
.user-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.text-wrap{
  width: 490rpx;
}
.username text{
  line-height: 80rpx;
  font-weight: bold;
}
.icon{
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
  background-color: #fff;
}